# Maintainer: Mohit Mishra <mohitmishra786@gmail.com>

pkgname=mdmend-bin
pkgver=1.0.0
pkgrel=1
pkgdesc="Fast, zero-dependency Markdown linter and fixer with 48 rules"
arch=('x86_64' 'aarch64')
url="https://github.com/mohitmishra786/mdmend"
license=('MIT')
provides=('mdmend')
conflicts=('mdmend' 'mdmend-git')
options=('!strip')
source_x86_64=("https://github.com/mohitmishra786/mdmend/releases/download/v${pkgver}/mdmend_${pkgver}_linux_amd64.tar.gz")
source_aarch64=("https://github.com/mohitmishra786/mdmend/releases/download/v${pkgver}/mdmend_${pkgver}_linux_arm64.tar.gz")
sha256sums_x86_64=('SKIP')
sha256sums_aarch64=('SKIP')

build() {
    echo "Binary package, no build required"
}

package() {
    cd "${srcdir}"
    
    install -Dm755 mdmend "${pkgdir}/usr/bin/mdmend"
    
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
    
    install -Dm644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
    
    install -Dm644 .mdmend.yml "${pkgdir}/usr/share/doc/${pkgname}/.mdmend.yml"
    
    install -d "${pkgdir}/usr/share/bash-completion/completions"
    echo "# Bash completion for mdmend - generated by the binary" > "${pkgdir}/usr/share/bash-completion/completions/mdmend"
    
    install -d "${pkgdir}/usr/share/zsh/site-functions"
    echo "# Zsh completion for mdmend - generated by the binary" > "${pkgdir}/usr/share/zsh/site-functions/_mdmend"
}

check() {
    "${srcdir}/mdmend" version
}